/*
 * CORE NAVIGATION 
 */          
#navbar
  -webkit-font-smoothing: antialiased
  background: nav-bg-color
  height: 65px

  .logo
    float: left
    height: 23px
    width: 27px
    text-indent: -9999px
    background-image: url()
    margin: 20px 30px 0 0

  .nav
    margin: 16px 0 0 10px
    float: left
    
    li
      float: left
      display: block
      margin-right: 38px

    a
      font-size: 14px
      color: nav-txt-color
      font-weight: 700
      padding: 8px 10px 10px
      display: block

      &:hover, &:focus, &.active
        text-decoration: none
        background: 0 0
        color: nav-txt-color-hover
  
  @import 'user-dropdown'
