/*
 * CORE NAVIGATION 
 */          
#navbar
  -webkit-font-smoothing: antialiased
  background: nav-bg-color
  height: 65px

  .logo
    float: left
    height: 65px
    width: 50px
    margin: 0 20px 0 0
    font-family: fontAwesome
    color: rgba(0, 0, 0, 0)

    span
      transition: all .2s ease
      display: block
      width: 7px
      height: 7px
      margin-right: 5px
      background: white
      border-radius: 50%
      float: left
      margin-top: 28px

    &:hover
      span
        background: mix(white, nav-bg-color, 50%)

  .nav
    margin: 16px 0 0 10px
    float: left
    
    li
      float: left
      display: block
      margin-right: 38px

    a
      font-size: 14px
      color: nav-txt-color
      font-weight: 700
      padding: 8px 10px 10px
      display: block

      &:hover, &:focus, &.active
        text-decoration: none
        background: 0 0
        color: nav-txt-color-hover
  
  @import 'user-dropdown'
